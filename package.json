{
  "name": "ngx-build-plugin1",
  "version": "0.0.6",
  "description": "Extend Angular CLI Build Configuration",
  "main": "index.js",
  "types": "index.d.ts",
  "builders": "builders.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/gcirone/ngx-build-plugins.git"
  },
  "author": "Gianluca Cirone <gianluca.cirone@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-s tsc copy",
    "build:watch": "run-p tsc:watch copy:watch",
    "build:clean": "rm -rf build/*",
    "tsc": "tsc -p tsconfig.json",
    "tsc:watch": "tsc -p tsconfig.json --watch",
    "copy": "cp package.json build && cp README.md build && cp LICENSE build && cpx \"src/**/*.{json,d.ts}\" build",
    "copy:watch": "cp package.json build && cp README.md build && cp LICENSE build && cpx \"src/**/*.{json,d.ts}\" build --watch --verbose",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "test": "echo \"Running tests for version $npm_package_version...\"",
    "release": "yarn version && cp package.json build",
    "release2": "yarn version && cp package.json build && git push --tags"
  },
  "dependencies": {
    "@schematics/angular": "7.2.4"
  },
  "peerDependencies": {
    "@angular-devkit/build-angular": ">= 0.10.0",
    "rxjs": ">= 6.0.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "0.12.4",
    "@angular-devkit/build-angular": "0.12.4",
    "@angular-devkit/core": "7.2.4",
    "@angular-devkit/schematics": "7.2.4",
    "@ngtools/webpack": "7.2.4",
    "@types/node": "10.12.26",
    "cpx": "1.5.0",
    "husky": "1.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "rxjs": "6.3.3",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prettier lint"
    }
  }
}
