{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "pretty": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["es2017", "dom"]
  },
  "exclude": ["node_modules", "build"]
}
